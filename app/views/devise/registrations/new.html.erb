<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.email_field :email, hide_label: true, class: "input-lg", autofocus: true, placeholder: "School Email (.edu)" %>
  <%= f.password_field :password, hide_label: true, class: "input-lg", placeholder: "New Password" %>
  <%= f.submit "Sign Up", class: "btn btn-success btn-lg btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
