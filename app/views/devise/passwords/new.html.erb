<% content_for(:form_title, "Forgot your Password?") %>
<div class="row text-center">
  <div class="col-md-12">
    <%= bootstrap_form_for(resource, style: :horizontal, :as => resource_name, :url => password_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.submit "Send me reset password instructions", class: "go-btn btn btn-success btn-xlg btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
