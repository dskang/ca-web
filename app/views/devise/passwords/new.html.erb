<h2>Don't worry, it happens.</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
  <%= f.email_field :email, hide_label: true, class: "input-lg", autofocus: true, placeholder: "Email" %>
  <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg btn-block" %>
<% end %>
