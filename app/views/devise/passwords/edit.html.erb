<% content_for(:form_title, "Change your password") %>
<div class="row text-center">
  <div class="col-md-12">
    <%= bootstrap_form_for(resource, style: :horizontal, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put}) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, :autofocus => true %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Change my password", class: "go-btn btn btn-success btn-xlg btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
