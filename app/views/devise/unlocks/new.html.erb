<% content_for(:form_title, "Resend unlock instructions") %>
<div class="row text-center">
  <div class="col-md-12">
    <%= bootstrap_form_for(resource, style: :horizontal, :as => resource_name, :url => unlock_path(resource_name), :html => {:method => :post}) do |f| %>
    <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.submit "Resend unlock instructions", class: "go-btn btn btn-success btn-xlg btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
