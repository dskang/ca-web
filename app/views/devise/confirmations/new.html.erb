<h2>Resend confirmation instructions</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
  <%= f.email_field :email, hide_label: true, class: "input-lg", autofocus: true, placeholder: "Email" %>
  <%= f.submit "Resend confirmation instructions", class: "btn btn-success btn-lg btn-block" %>
<% end %>

