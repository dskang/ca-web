<body class="cover">
  <div class="wrapper">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12">
          <h1 class="hook"><%= @school.proper_name %> needs <%= pluralize(School::UNLOCK_THRESHOLD - @school.signups, "more signup") %> to be unlocked!</h1>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-12">
        <%= form_for :countdown_user, url: countdown_user_confirmation_path do |f| %>
          <div class="input-group text-center">
            <%= f.text_field :email, placeholder: "Your #{@school.name}.edu email", class: "form-control"%>
          </div>
          <%= f.hidden_field :school_id, value: @school.id %>
          <%= f.submit "Unlock #{@school.proper_name}", class: "go-btn btn btn-success btn-xlg btn-block" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
