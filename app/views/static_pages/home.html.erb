<div class="row">
  <div class="col-xs-12 text-center">
    <h1>Pick your school!</h1>
  </div>
</div>
<% schools = %w(princeton harvard yale brown upenn columbia dartmouth cornell) %>
<div class="row">
  <% schools[0...4].each do |school| %>
  <div class="col-md-3">
    <%= link_to image_tag("#{school}.png", class: "school-logo"), countdown_path(school) %>
  </div>
  <% end %>
</div>
<div class="row">
  <% schools[4...8].each do |school| %>
  <div class="col-md-3">
    <%= link_to image_tag("#{school}.png", class: "school-logo"), countdown_path(school) %>
  </div>
  <% end %>
</div>
<footer class="row text-center">
  <h2> Not an Ivy? Click here!</h2>
</footer>
