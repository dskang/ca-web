$grid-gutter-width: 20px;
$container-large-desktop: (940px + $grid-gutter-width);

$text-color: white;
$link-color: white;
$link-hover-color: white;
$body-bg: transparent;

@import "bootstrap";

html {
  height: 100%;
  background: url(<%= asset_path 'bg.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  min-height: 100%; // min-height used so it extends when page height > viewport
  background-color: rgba(0, 0, 0, 0.8);
}

.hook {
  font-size: 35px;
  text-align: center;
}

.how-it-works {
  text-align: center;
  margin-top: 40px;
  margin-bottom: 40px;
  .fa {
    font-size: 10em;
  }
}

.navbar {
  background-color: black;
  border-bottom: 1px solid #222;
}

.navbar-brand {
  font-size: 30px;
  line-height: 150%;
}

.navbar-bottom-padded {
  margin-bottom: 10px;
}
